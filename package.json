{
    "name": "esbuild-react-ssr-bundlesplit",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/stefanoruth/esbuild-react-ssr-bundlesplit.git",
    "author": "Stefano Ruth <stefanoruth@users.noreply.github.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "clean": "rm -rf dist",
        "dev": "yarn clean && yarn build && yarn start",
        "build": "node esbuild.mjs",
        "start": "node dist/server/server.js"
    },
    "dependencies": {
        "@stefanoruth/fetch-hooks": "^0.1.4",
        "express": "^4.18.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.8.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/react-dom": "^18.0.11",
        "esbuild": "^0.17.10",
        "esbuild-css-modules-plugin": "^2.7.1",
        "esbuild-plugin-assets-manifest": "^1.0.7",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5"
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "proseWrap": "always",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120
    },
    "nodemonConfig": {
        "ext": "ts,tsx",
        "exec": "yarn dev",
        "watch": [
            "esbuild.mjs",
            "src/**"
        ]
    }
}
